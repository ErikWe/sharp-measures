<?xml version="1.0" encoding="utf-8" ?>

<RunSettings>
    
    <RunConfiguration>
        <ResultsDirectory>.\Reports\Coverage\</ResultsDirectory>
        <TreatNoTestsAsError>true</TreatNoTestsAsError>
    </RunConfiguration>
    
    <DataCollectionRunSettings>
        <DataCollectors>
            <DataCollector friendlyName="Code Coverage">
                <Configuration>
                    <Format>cobertura</Format>
                    <CodeCoverage>
                        <ModulePaths>
                            <Include>
                                <ModulePath>.*SharpHorizons.Epoch.dll</ModulePath>
                            </Include>
                        </ModulePaths>
                    </CodeCoverage>
                </Configuration>
            </DataCollector>
        </DataCollectors>
    </DataCollectionRunSettings>
    
</RunSettings>